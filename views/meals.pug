doctype html
html(lang='en')
  head
    title Meal Panel
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    link(rel='stylesheet' href='//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    link(rel='stylesheet' href='/resources/demos/style.css')
    script(src='https://code.jquery.com/jquery-1.12.4.js')
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')

    link(rel='stylesheet' href='../stylesheets/home.css')
    link(rel='stylesheet' href='../stylesheets/meals.css')
    script(src='../javascripts/meals.js')


  body
    header
      nav.navbar.navbar-default.navbar-fixed-top.navbar-inner
        .container-fluid
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand.brand(href='#') NutrifyMe
          // Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/home') Home
              li
                a(href='/') Logout
          // /.navbar-collapse
          // /.container-fluid
    .container
      .register-form
        
        h1 Add Meal
        
        form(role="form",method="post")
          input(name='mealDate' type="Date" id="datetime" placeholder='Date')

          input(name='mealName' type='text' placeholder='Meal Name' id='meal')
          .input-group
            input(name='mealCalorie' placeholder='Calorie' id='calorie' type='text' readonly='')
            span.input-group-btn
              button(id='fetch' type='button') Go 
          input(name = 'mealDescription'  type='text' placeholder='Description' id='description')
          button(id='submit' type="e") Submit

